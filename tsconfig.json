{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "target": "es5",
    "noImplicitAny": false,
    "noImplicitThis": false
  },
  "exclude": ["dist", "node_modules", "src/**/*.spec.*"],
  "includes": ["src"]
}
